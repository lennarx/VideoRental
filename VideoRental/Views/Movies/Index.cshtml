@model  IEnumerable<VideoRental.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movie", new { @class = "btn btn-primary"})
@if (!Model.Any())
{
    <h1>There are no movies</h1>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", "Movies", new {id = movie.MovieId }, null)</td>
                <td>@movie.Genre.Description</td>
            </tr>
            }
        </tbody>
    </table>
}


